<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0.7dp"
    app:cardMaxElevation="1dp"
    android:layout_marginVertical="5dp"
    app:cardCornerRadius="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:paddingHorizontal="30dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_location_on_blue_24dp"
            android:id="@+id/upcomingCellLocationIcon"/>

        <TextView
            android:layout_toEndOf="@id/upcomingCellLocationIcon"
            android:layout_marginStart="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/DarkBlue"
            android:text="Rehovot, golda meir"
            android:id="@+id/upcomingCellAddressTV"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginStart="5dp"
            android:textColor="@color/lightBlue2"
            android:layout_marginTop="5dp"
            android:text="26.9.2020"
            android:textStyle="bold"
            android:layout_below="@+id/upcomingCellAddressTV"
            android:id="@+id/upcomingCellDateTV"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/upcomingCellDateTV"
            android:layout_toEndOf="@+id/upcomingCellDateTV"
            android:layout_marginStart="20dp"
            android:text="10:00"
            android:textColor="@color/lightBlue2"
            android:textSize="16sp"
            android:id="@+id/upcomingCellTimeTV"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginStart="5dp"
            android:id="@+id/upcomingCellRunners"
            android:layout_below="@+id/upcomingCellDateTV">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_run_orange_24dp"
                android:id="@+id/upcomingCellRunnersIcon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/runners"
                android:layout_marginStart="2dp"

                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/orange"/>

        </LinearLayout>

        <Button
            android:layout_width="75dp"
            android:textColor="@color/lightGray"
            android:layout_height="40dp"
            android:id="@+id/upcomingCellremoveBtn"
            android:text="@string/remove"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/grey_btn"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>