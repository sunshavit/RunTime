<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_centerHorizontal="true"
        app:civ_border_width="2dp"
        android:layout_marginTop="10dp"
        app:civ_border_color="#FF000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="20dp"
        android:id="@+id/linearLayoutNameAndAge"
        android:layout_below="@+id/profile_image">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="30sp"
            android:padding="5dp"
            android:text="dsasfsdfdsfdsfdsfsdfds"
            android:id="@+id/fullNameProfileTV"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="30sp"
            android:padding="5dp"
            android:layout_marginStart="10dp"
            android:text="adsfsdfdssdfsdfdsf"
            android:id="@+id/ageProfileTV"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayoutNameAndAge"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:padding="5dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="dsasfsdfdsfdsfdsfsdfds"
            android:id="@+id/levelProfileTV"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:padding="5dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:text="adsfsdfdssdfsdfdsf"
            android:id="@+id/locationProfileTV"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:padding="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="adsfsdfdssdfsdfdsf"
            android:id="@+id/emailProfileTV"/>


    </LinearLayout>







</RelativeLayout>